{
  "name": "characterizer",
  "version": "0.2.0",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wonderunit/characterizer.git"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "build -m",
    "dist:win": "build -w"
  },
  "devDependencies": {
    "electron": "^1.7.2",
    "electron-builder": "^19.27.7"
  },
  "dependencies": {
    "electron-updater": "^2.13.0",
    "knex": "^0.13.0",
    "nan": "^2.7.0",
    "sqlite3": "^3.1.13",
    "trash": "^4.0.1"
  },
  "build": {
    "asar": true,
    "appId": "com.wonderunit.characterizer",
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "files": [
      "**/*",
      "!*.md",
      "!README.md"
    ],
    "nsis": {
      "perMachine": true
    }
  }
}
